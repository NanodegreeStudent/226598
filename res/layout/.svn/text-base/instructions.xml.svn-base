<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/linear_linear_title_instruction"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/qinstruction_text_title"
            style="@style/HeadingQuestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="INSTRUCTIONS"
            android:visibility="visible" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_instructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/scroll_linear_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            
            
            <TextView
                android:id="@+id/tv_instructions_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="WELCOME"
                android:textSize="25sp"
                android:layout_margin="10dip" />
            
            <TextView
                android:id="@+id/tv_instructions_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="qwerty"
                android:textSize="20sp"
                android:layout_margin="10dip" />

            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/instructions"
                android:layout_margin="20dip"
                android:paddingBottom="30dip"  />

            <Button
                android:id="@+id/btn_start_test"
                style="@style/OkButtonInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:background="@drawable/selector_answer_text_buttons"
                android:text="START" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>