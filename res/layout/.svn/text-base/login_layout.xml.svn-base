<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    
     
    
     <LinearLayout
        android:id="@+id/linear_title_login"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/login_title"
            style="@style/HeadingQuestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGIN"
            android:visibility="visible" >
        </TextView>
    
    </LinearLayout>
    
    
    
    
    
   
     <LinearLayout
         android:paddingTop="30dip"
        android:id="@+id/layout_1_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        
         >
    
    
  <ImageView 
      
       android:id="@+id/imgview_logo_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
      
      
      />
  
   <TextView
            
            android:id="@+id/tv_please_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please login to continue" 
            android:layout_marginTop="20dip"
            style="@style/PleaseTextViewLogin"/>
  
  

    <LinearLayout
        android:paddingTop="30dip"
        android:id="@+id/layout_2_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- <TextView
            
            android:id="@+id/tv_email_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:" /> -->

        <EditText
           
            android:id="@+id/et_email_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="abc@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/email_field" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_3_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:layout_margin="20dip"
         >
<!-- 
        <TextView
            android:id="@+id/tv_password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:" /> -->

        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="............"
            android:inputType="textPassword"
            android:background="@drawable/password_field"
             />
    </LinearLayout>

    
    <Button 
        
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/LoginButtonLogin"
        android:background="@drawable/selector_answer_text_buttons"
        android:text="Login"    
        
        />
    
</LinearLayout>

</LinearLayout>